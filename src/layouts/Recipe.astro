---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"recipes">["data"];

const { title, pubDate, updatedDate, ingredients } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={title} />
  </head>

  <body class="bg-gray-dark text-gray-dark">
    <Header />
    <main class="max-w-6xl mx-auto px-2">
      <article>
        <div
          class="mb-4 p-3 text-center rounded-md bg-gradient-to-br from-pink to-blue"
        >
          <h1 class="text-xl font-bold text-transparent bg-clip-text">
            {title}
          </h1>
          <FormattedDate date={pubDate} />
        </div>
        {
          updatedDate && (
            <div class="last-updated-on">
              Last updated on <FormattedDate date={updatedDate} />
            </div>
          )
        }
        <div class="flex">
          <div
            class="w-30% bg-gray-light border-pink border-8 rounded-md mr-4 p-3"
          >
            <h3 class="text-lg mb-2 font-semi-bold">Ingredients</h3>
            <ul>
              {ingredients.map((i) => <li>{i}</li>)}
            </ul>
          </div>
          <div class="w-70% bg-gray-light border-blue border-8 rounded-md p-3">
            <h3 class="text-lg mb-2 font-semi-bold">Method</h3>
            <slot />
          </div>
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
